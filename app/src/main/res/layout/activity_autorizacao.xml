<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="411dp"
      android:layout_height="70dp"
      android:orientation="horizontal"

      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Autorizações Pendentes"
        android:foregroundGravity="center|center_horizontal|center_vertical"/>
  </LinearLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/lista_autorizacao"
      android:layout_width="match_parent"
      android:layout_height="528dp">

  </android.support.v7.widget.RecyclerView>

  <RelativeLayout
      android:layout_width="411dp"
      android:layout_height="134dp"
      android:layout_gravity="end|bottom|fill_vertical">

    <ImageButton
        android:id="@+id/send_author"
        android:layout_width="132dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="23dp"
        android:background="#00FFFFFF"
        android:foregroundGravity="center"
        android:scaleType="fitCenter"
        android:tint="#00FFFFFF"
        app:srcCompat="@drawable/button_enviar" />
  </RelativeLayout>


</LinearLayout>