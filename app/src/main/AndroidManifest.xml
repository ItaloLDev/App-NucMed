<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="prototipo.adapto.com.menuc"
    tools:ignore="ExtraText">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_v2"
        android:label="@string/app_name2"
        android:roundIcon="@mipmap/ic_launcher_v2_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".MainActivities.FaleConoscoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="message/rfc822"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivities.DetalharPostagemForumActivity" />
        <activity android:name=".MainActivities.CriarPostagemForumActivity" />
        <activity
            android:name=".BloggerStructure.ListarPostagens"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivities.TelaInicialActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivities.ListaAutoresActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivities.AutorizacaoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivities.EnviarConviteActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".WebViewConfig" />
        <activity
            android:name=".MainActivities.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivities.CriarLoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".BloggerStructure.DetalharPostagem" />
        <activity android:name=".BloggerStructure.QuestionariosPosts" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_stat_name" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity
            android:name=".MainActivities.LoginSalvoActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>